<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:theme="@style/Toolbar"
                app:title="@string/app_name"
                app:titleTextColor="@color/textContrastPrimary"
                />

            <TextView
                android:id="@+id/current_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_small"
                android:paddingLeft="@dimen/spacing_normal"
                android:ellipsize="start"
                android:singleLine="true"
                android:textColor="@color/textContrastPrimary"
                android:textSize="@dimen/font_normal"
                tools:text="/storage/emulated/0/Download"
                />

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/empty_directory_msg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            tools:ignore="UseCompoundDrawables"
            tools:visibility="gone"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tint="@color/iconTintPrimary"
                app:srcCompat="@drawable/ic_directory"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/directory_empty"
                android:textSize="18sp"
                />

        </LinearLayout>

        <include layout="@layout/error_permission_storage_never_ask_again"/>

        <include layout="@layout/error_permission_storage_denied"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:itemBackground="?selectableItemBackground"
        />

</android.support.v4.widget.DrawerLayout>
